{
  "name": "poirot",
  "displayName": "Poirot",
  "icon": "icon.png",
  "publisher": "MartinBlasko",
  "keywords": [
    "i18n",
    "translation",
    "internationalization",
    "paraglide",
    "paraglidejs",
    "svelte",
    "sveltekit",
    "sherlock",
    "inlang",
    "elementary",
    "watson",
    "poirot"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/MartinBspheroid/poirot.git"
  },
  "author": {
    "name": "Romer"
  },
  "description": "VS Code extension that displays inline translation values for Paraglide JS i18n method calls in Svelte/SvelteKit applications",
  "version": "0.5.2",
  "engines": {
    "vscode": "^1.99.3"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:javascriptreact",
    "onLanguage:typescript",
    "onLanguage:typescriptreact",
    "onLanguage:svelte"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Poirot",
      "properties": {
        "poirot.defaultLocale": {
          "type": "string",
          "default": "en",
          "description": "Default locale for displaying translation labels. If not set, will use the baseLocale from project.inlang settings or fallback to 'en'.",
          "pattern": "^[a-z]{2}(-[A-Z]{2})?$",
          "patternErrorMessage": "Locale must be in format 'en' or 'en-US'"
        },
        "poirot.realtimeUpdates": {
          "type": "boolean",
          "default": true,
          "description": "Enable real-time updates of translation labels while typing. When disabled, labels only update on save."
        },
        "poirot.updateDelay": {
          "type": "number",
          "default": 300,
          "minimum": 100,
          "maximum": 2000,
          "description": "Delay in milliseconds before updating translation labels after typing stops (100-2000ms)."
        },
        "poirot.activeProject": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "The active project path relative to workspace root. Automatically set when selecting a project."
        }
      }
    },
    "views": {
      "poirot": [
        {
          "id": "poirotProjectSelector",
          "name": "Project Selection",
          "when": "elementaryWatson.showProjectSelector"
        },
        {
          "id": "poirotTranslationKeys",
          "name": "Translation Keys",
          "when": "elementaryWatson.showSidebar"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "poirot",
          "title": "Poirot",
          "icon": "$(globe)"
        }
      ]
    },
    "commands": [
      {
        "command": "poirot.changeLocale",
        "title": "Change Label Locales",
        "category": "Poirot"
      },
      {
        "command": "poirot.extractText",
        "title": "Extract Text to Locale",
        "category": "Poirot"
      },
      {
        "command": "poirot.openTranslationFile",
        "title": "Open Translation File",
        "icon": "$(target)"
      },
      {
        "command": "poirot.selectProject",
        "title": "Select Active Project",
        "category": "Poirot",
        "icon": "$(folder-active)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "oxlint src/",
    "lint:fix": "oxlint --fix src/",
    "format": "oxfmt",
    "format:check": "oxfmt --check",
    "typecheck": "tsc --noEmit",
    "build": "tsc -p ./",
    "check:all": "npm run lint && npm run format:check && npm run typecheck",
    "fix:all": "npm run lint:fix && npm run format",
    "bump": "bumpp --execute 'npm run build'",
    "bump:patch": "bumpp patch --execute 'npm run build'",
    "bump:minor": "bumpp minor --execute 'npm run build'",
    "bump:major": "bumpp major --execute 'npm run build'",
    "release": "npm run check:all && npm run build && npm run bump",
    "pretest": "npm run compile && npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.99.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "bumpp": "^10.3.1",
    "oxfmt": "^0.13.0",
    "oxlint": "^1.28.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "human-id": "^4.1.1"
  }
}
